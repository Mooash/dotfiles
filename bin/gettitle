#!/usr/bin/env bash

# Get a page title and copy it to the users clipboard

url="$1"

curl -s "$url" | perl -l -0777 -ne 'print $1 if /<title.*?>\s*(.*?)\s*<\/title/si'| tr -d '\n' | pbcopy
if [[ $? == 0 ]]; then
	echo "Titled copied to clipboard"
	echo "Title:" $(pbpaste) ""
else
	echo "Something went wrong!"
fi
